import tkinter as tk
import random

class NumberGuessingGame:
    def __init__(self, root):
        self.root = root
        self.root.title("Number Guessing Game")
        self.root.geometry("500x500")
        self.secret_number = random.randint(1, 100)
        self.attempts = 0

        
        self.label_title = tk.Label(root, text="Guess the Number (1-100)", font=("Arial", 14, "bold"))
        self.label_title.pack(pady=10)

        
        self.entry = tk.Entry(root, font=("Arial", 12))
        self.entry.pack(pady=10)

        
        self.button_check = tk.Button(root, text="Check", command=self.check_guess, font=("Arial", 12))
        self.button_check.pack(pady=5)

    
        self.label_result = tk.Label(root, text="", font=("Arial", 12))
        self.label_result.pack(pady=10)

        
        self.button_restart = tk.Button(root, text="Restart Game", command=self.restart_game, font=("Arial", 12))
        self.button_restart.pack(pady=5)

    def check_guess(self):
        try:
            guess = int(self.entry.get())
            self.attempts += 1

            if guess < self.secret_number:
                self.label_result.config(text="Too low! Try again.", fg="blue")
            elif guess > self.secret_number:
                self.label_result.config(text="Too high! Try again.", fg="red")
            else:
                self.label_result.config(
                    text=f"ðŸŽ‰ Correct! The number was {self.secret_number}\nAttempts: {self.attempts}", fg="green"
                )
        except ValueError:
            self.label_result.config(text="Please enter a valid number.", fg="orange")

    def restart_game(self):
        self.secret_number = random.randint(1, 100)
        self.attempts = 0
        self.entry.delete(0, tk.END)
        self.label_result.config(text="", fg="black")


if __name__ == "__main__":
    root = tk.Tk()
    game = NumberGuessingGame(root)
    root.mainloop()
